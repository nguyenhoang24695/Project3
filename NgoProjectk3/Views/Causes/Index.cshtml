<div class="featured-cause">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading">
                    <h2 class="entry-title">Featured Cause</h2>
                </div><!-- .section-heading -->
            </div><!-- .col -->
        </div><!-- .row -->

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-lg-6">
                    <div class="cause-wrap d-flex flex-wrap justify-content-between">
                        <figure class="m-0">
                            <a href="/donatePrograms/Details/@item.Id" ><img src="@item.ThumbnailUrl" alt="" style="max-width: 270px"></a>
                            

                        </figure>

                        <div class="cause-content-wrap">
                            <header class="entry-header d-flex flex-wrap align-items-center">
                                @if (item.Name.Length > 20)
                                {
                                   
                                    <h3 class="entry-title w-100 m-0"><a href="/donatePrograms/Details/@item.Id">@item.Name.Substring(0, Math.Min(item.Name.Length, 17))...</a></h3>
                                }
                                else
                                {
                                    <h3 class="entry-title w-100 m-0"><a href="/donatePrograms/Details/@item.Id">@item.Name</a></h3>
                                }


                                <div class="posted-date">
                                    from
                                    <a href="#">@item.StartedAt.ToString("dd/MM/yyyy") </a>
                                </div><!-- .posted-date -->

                                <div class="posted-date">
                                    to
                                    <a href="#">@item.EndedAt.ToString("dd/MM/yyyy")</a>
                                </div><!-- .cats-links -->
                            </header><!-- .entry-header -->

                            <div class="entry-content">
                                <p class="m-0">@item.Content.Substring(0,Math.Min(item.Content.Length,95))...</p>
                            </div><!-- .entry-content -->

                            <div class="entry-footer mt-5">
                                <a href="/donations/create?donateProgramId=@item.Id" class="btn gradient-bg mr-2">Donate</a>
                            </div><!-- .entry-footer -->
                        </div><!-- .cause-content-wrap -->

                        <div class="fund-raised w-100">
                            <div class="featured-fund-raised-bar-@item.Id barfiller">
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div><!-- .tipWrap -->
                                @if ((item.DonatedMoney * 100 / item.Amount) > 100)
                                {
                                    <span class="fill" data-percentage="100"></span>
                                }
                                else
                                {
                                    <span class="fill" data-percentage="@(item.DonatedMoney * 100 / item.Amount)"></span>
                                }

                            </div><!-- .fund-raised-bar -->
                            <script>
                                $('.featured-fund-raised-bar-@item.Id').barfiller({ barColor: '#ff5a00', duration: 1500 });
                            </script>
                            <div class="fund-raised-details d-flex flex-wrap justify-content-between align-items-center">
                                <div class="fund-raised-total mt-4">
                                    Raised: $@item.DonatedMoney
                                </div><!-- .fund-raised-total -->

                                <div class="fund-raised-goal mt-4">
                                    Goal: $@item.Amount
                                </div><!-- .fund-raised-goal -->
                            </div><!-- .fund-raised-details -->
                        </div><!-- .fund-raised -->
                    </div><!-- .cause-wrap -->
                </div><!-- .col -->
            }


