@model NgoProjectk3.Models.Category

@{
                /**/

                ViewBag.Current = "Category";
                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/_Mylayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h2>Create Event</h2>
            <div class="row justify-content-center">
                <div class="col-10">
                    <label class="font_">Name categories <span>(*)</span></label>
                    <div class="form-group col-md-12 ">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control family", @placeholder = "Name Event !" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <div class="form-row justify-content-center">
                <div class="col-10">
                    <div class="form-group col-md-12">

                        <label class="font_">Description <span>(*)</span></label>
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control family", @cols = 80, @rows = 10, @placeholder = "Content Event Charity !" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="form-group family">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </div>



    </form>

}

